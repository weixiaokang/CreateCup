<com.weixiaokang.locationrecord.widget.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:me="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    me:rightPadding="100dp"
    android:background="@android:color/holo_blue_light"
    tools:context="com.weixiaokang.weather.MainActivity"
    android:id="@+id/sliding_menu">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/locating_icon"
                android:layout_width="wrap_content"
                android:layout_height="48dp" />
            <TextView
                android:id="@+id/location_tv"
                android:gravity="center"
                android:text="我的位置"
                android:textSize="36sp"
                android:textColor="#ffffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/mojitip_11"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp" />
                <TextView
                    android:id="@+id/data_tv"
                    android:text="数据中心"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp" />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/setting_tv"
                    android:text="设       置"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </LinearLayout>
        </LinearLayout>
        <include layout="@layout/activity_weather"/>
    </LinearLayout>
</com.weixiaokang.locationrecord.widget.SlidingMenu>
